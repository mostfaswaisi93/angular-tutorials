<div class="card">
    <div class="card-body">
        <h2>Tasks List</h2>
        <a class="btn btn-success float-right" href="/tasks/create"><i class="fa fa-plus"></i> Create Task</a>
    </div>
    <table class="table table-bordered table-hover" style="width: 95%; margin-left: 20px;">
        <thead>
            <tr>
                <th scope="col">Task Name</th>
                <th scope="col">Date</th>
                <th scope="col">Status</th>
                <th scope="col">Description</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        {{#each tasks}}
        <tbody>
            {{#each this}}
            <tr>
                <td>{{this.taskName}}</td>
                <td>{{this.date}}</td>
                <td>{{this.status}}</td>
                <td>{{this.description}}</td>
                <td>
                    <a href="/tasks/{{this._id}}" class="btn btn-primary"><i class="fa fa-edit" aria-hidden="true"></i></a>
                    {{!-- <a href="/tasks/{{this._id}}" class="btn btn-info"><i class="fa fa-eye" aria-hidden="true"></i></a> --}}
                    <a href="/tasks/delete/{{this._id}}" class="btn btn-danger" onclick="return confirm('Are you sure to delete this record?');"><i class="fa fa-trash" aria-hidden="true"></i></a>
                </td>
            </tr>
            {{/each}}
        </tbody>
        {{/each}}
    </table>
</div>